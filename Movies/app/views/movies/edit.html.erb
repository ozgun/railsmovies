<h1>Editing movie</h1>

<%= error_messages_for :movie %>

<% form_for(@movie) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Year</b><br />
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @movie %> |
<%= link_to 'Back', movies_path %>
